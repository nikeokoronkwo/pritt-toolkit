{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "rootDir": ".",
    "paths": {
      "@pritt/toolkit": ["./packages/toolkit/src"],
      "@pritt/toolkit-common": ["./packages/common/src"]
    },
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
  },
}
